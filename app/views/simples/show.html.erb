      <span><%= @simple.sentense%></span>
    </div>
  
    <% if current_user %>
      <%= link_to "Edit","", method: :get, class: "item-red-btn" %>
      <p class="or-text">or</p>
      <%= link_to "Delete,", class:"item-destroy" %>

     
      <% end %>

 
  
 
</div>

