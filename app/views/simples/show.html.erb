

<%# 商品の概要 %>
<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @simple.title %>
    </h2>
    <div class="item-img-content">
      <%= image_tag @simple.image, class:"item-box-img" %>
    </div>
    <div class="item-price-box">
      <span class="item-price">
      </span>
