</div>
<%# 動画部分 %>
 <div class='item-contents'>
    <h2 class='title'></h2>
    <%= link_to 'What’s New', "", class: "subtitle" %>
    <ul class='item-lists'>

   
     <% @simple.each do |simple| %>
      <li class='list'>
        <%= link_to simple_path(simple) do %>
        <div class='item-img-content'>
          <%= image_tag simple.image, class: "item-img" %>

        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= simple.title %>
          </h3>
          <div class='item-price'>
            <%# <span><%= item.price%><br><%=  %></span> 
            <div class='star-btn'>
              <%= image_tag "", class:"star-icon" %>
              <span class='star-count'></span>
            </div>
          </div>
        </div>
         <% end %>
        </li>
      <% end %>

      
    </ul>
  </div>
</div>
